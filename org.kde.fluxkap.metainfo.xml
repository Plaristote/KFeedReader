<?xml version="1.0" encoding="utf-8"?>
<component type="desktop-application">
  <id>org.kde.fluxkap</id>
  <name>FluxKap Kirigami Application</name>
  <summary>A web feed aggreagtor</summary>
  <content_rating type="oars-1.0"></content_rating>
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0</project_license>
  <url type="homepage">https://github.com/Plaristote/KFeedReader</url>
  <developer id="io.github.plaristote">
    <name>Michael Martin Moro</name>
  </developer>
  <description>
    <p>
      A feed aggregator for all your aggregation needs. Supports RSS, Atom and JSON feeds,
      with custom features for known services (such as YouTube).
    </p>
    <p>Non-exhaustive list of features:</p>
    <ul>
      <li>Organize your feeds into folders</li>
      <li>Aggregate all your unread articles from any folder into one feed</li>
      <li>Podcast support</li>
      <li>Video support (PeerTube, YouTube, etc)</li>
      <li>Import/export a feed list from OPML files</li>
      <li>Import YouTube subscriptions from a Google Takeout CSV file</li>
    </ul>
  </description>
  <launchable type="desktop-id">org.kde.fluxkap.desktop</launchable>
